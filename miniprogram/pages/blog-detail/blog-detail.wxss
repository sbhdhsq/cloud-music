page {
  background-color: #EDEDED;
}

.container {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 100rpx;
 
}

.blog-card {
  margin-bottom: 20rpx;
  margin-top: 180rpx;
}

.tab {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #ccc;
  color: #697480;
}

.comment-list {
  background-color: #fff;
}

.comment {
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.comment-title {
  display: flex;
  align-items: center;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-nickname {
  flex: 1;
  color: #000119;
}

.comment-content {
  font-size: 32rpx;
  line-height: 1.5;
  font-weight: 400;
  padding: 20rpx 0;
  color: #000119;
}

.comment-time {
  font-size: 24rpx;
  color: #939393;
}

.blog-ctrl {
  position: fixed;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}
