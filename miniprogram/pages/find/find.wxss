page {
  background-color: #EDEDED;
}

.header {
  position: fixed;
  left: 0;
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  z-index: 99;
  background-color: #fff;
  box-sizing: border-box;
  padding-left: 20rpx;
  scroll-padding-right: 20rpx;
}

.left {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.left .icon-edit {
  font-size: 48rpx;
  color: #4B4B4B;
}

.right {
  flex: 1;
}

.container {
  margin-top: 170rpx;
  padding: 10rpx 10rpx 10rpx 0;
}

.blog-panel {
  margin-bottom: 20rpx;
}
