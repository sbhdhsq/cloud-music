page {
  background-color: #EDEDED;
}

.blog {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  margin-top: 90rpx;
}

.blog-header {
  display: flex;
  align-items: center;
}

.blog-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blog-box {
  flex: 1;
}

.blog-nickName {
  font-size: 32rpx;
  color: #4B4B4B;
}

.blog-time {
  font-size: 24rpx;
  color: #939393;
}

.blog-content {
  margin: 20rpx 0;
  color: #4B4B4B;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-list .image-wrap {
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.image-list .image-wrap .image {
  width: 100%;
  height: 100%;
}

.image-list .image-wrap .image:nth-child(3n) {
  margin-right: 0;
}
